<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>kafkastream</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>tar.gz</format>
	</formats>
	
	<fileSets>
		<fileSet>
			<directory>${basedir}/src/main/assembly</directory>
			<outputDirectory>bin/</outputDirectory>
			<excludes>
				<exclude>*.xml</exclude>
				<exclude>etl-flume.sh</exclude>
			</excludes>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/resources</directory>
			<outputDirectory>conf/</outputDirectory>
			<includes>
				<include>config.yaml</include>
				<include>log4j.properties</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/resources</directory>
			<outputDirectory>logs/</outputDirectory>
			<includes>
				<include>xxx.log</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/</directory>
			<outputDirectory>lib/</outputDirectory>
			<includes>
				<include>streamstat-1.0.jar</include>
			</includes>
		</fileSet>
		<!-- include compile source jar -->
		<fileSet>
			<directory>${basedir}/lib/</directory>
			<outputDirectory>lib/</outputDirectory>
			<excludes>
				<exclude>kafka-clients-0.10.0.0.jar </exclude>
				<exclude>kafka-streams-0.10.0.0.jar </exclude>
			</excludes>
		</fileSet>
	</fileSets>	
</assembly>