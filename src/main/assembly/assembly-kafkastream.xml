<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>kafkastream</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>tar.gz</format>
	</formats>
	
	<fileSets>
		<fileSet>
			<directory>${basedir}/src/main/assembly</directory>
			<outputDirectory>bin/</outputDirectory>
			<includes>
				<include>etl-kafkastream.sh</include>
				<include>groupbyetl-kafkastream.sh</include>
				<include>secondfilteretl-kafkastream.sh</include>
			</includes>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/assembly</directory>
			<outputDirectory>./</outputDirectory>
			<includes>
				<include>startstream.sh</include>
				<include>stopstream.sh</include>
				<include>groupbystartstream.sh</include>
                <include>groupbystopstream.sh</include>
                <include>secondfilterstartstream.sh</include>
                <include>secondfilterstopstream.sh</include>
			</includes>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/resources</directory>
			<outputDirectory>conf/</outputDirectory>
			<includes>
				<include>config.yaml</include>
				<include>log4j.properties</include>
				<include>cron</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/</directory>
			<outputDirectory>lib/</outputDirectory>
			<includes>
				<include>streamstat-1.0.jar</include>
			</includes>
		</fileSet>
		<!-- include compile source jar -->
		<fileSet>
			<directory>${basedir}/lib/</directory>
			<outputDirectory>lib/</outputDirectory>
		</fileSet>
	</fileSets>	
</assembly>